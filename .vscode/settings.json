{
  // Ignore unknown at-rules (like @tailwind) in the built-in CSS linter
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",

  // Tailwind CSS IntelliSense integration helpers (recommended extension)
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "typescript": "typescript",
    "typescriptreact": "typescriptreact",
    "html": "html",
    "css": "css"
  },

  // Point the Tailwind extension to the config file if needed
  "tailwindCSS.experimental.configFile": "./tailwind.config.js",

  // Allow suggestions inside strings (useful for className completions)
  "editor.quickSuggestions": {
    "strings": true
  }
}